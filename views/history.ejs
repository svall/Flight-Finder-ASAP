<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title></title>
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js" charset="utf-8"></script>
  <script src="/scripts/script.js" type="text/javascript"></script>
  <link href="https://fonts.googleapis.com/css?family=Economica" rel="stylesheet">
</head>
<body>
  <form action="/auth?_method=DELETE" method="post">
    <nav class="navlinks">
      <a href="/home" class="links">New Search</a>
      <input type="submit" class="logoutButton" value="Logout">
    </nav>
    <!-- <input type="submit" class="logoutButton" value="Logout"> -->
    <!-- <h1 class="flightsheader">FLIGHT FINDER</h1> -->
  </form>
  <h1 class="flightsheader">FLIGHT FINDER</h1>
  <hr>
  <h1 class="savedSummary">Total Flights Saved - <%= savedFlights.length %></h1>
  <div class="globalContainer">
  <% for (let i = 0; i < savedFlights.length; i++) { %>
    <div class="historyDisplayContainer">
      <div class="userInfoHistory">
        <p><span style="font-weight: bold; color: blue;">Origin:</span> <%= savedFlights[i].origin %><br>
        <span style="font-weight: bold; color: blue;">Destination:</span> <%= savedFlights[i].destination %><br>
        <span style="font-weight: bold; color: blue;">Departure:</span> <%= savedFlights[i].departure_date %><br>
        <span style="font-weight: bold; color: blue;">Return:</span> <%= savedFlights[i].return_date %><br>
        <span style="font-weight: bold; color: blue;">Price:</span> $<%= savedFlights[i].price %><br>
        <span style="font-weight: bold; color: blue;">Reminders:</span> <%= savedFlights[i].reminders %></p>
      </div>
      <div class="eddelbuttons">
        <form class="delete-flight" action="/history/<%= savedFlights[i]._id %>?_method=DELETE" method="POST">
          <input type="submit" class="allDeleteButtons" value="DELETE">
        </form>
        <input type="submit" class="editButton<%= i %> allEditButtons" value="EDIT">
      <!-- </div> -->
      </div>
      <form class="editHistory" action="/history/<%= savedFlights[i]._id %>?_method=PUT" method="POST">
        <div class="updateBox<%= i %> allUpdateBoxes">
          <label class="editLabel<%= i %> allEditLabels"> Edit Reminder:<br>
            <input type="text" class="reminderBox<%= i %> allReminderBoxes" name="edit[reminders]">
          </label></p>
          <input type="submit" class="updateButton<%= i %> allUpdateButtons" value="UPDATE">
        </div>
      </form>
    </div>
  <% } %>
  </div>
</body>
</html>

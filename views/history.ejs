<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title></title>
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0/jquery.min.js" charset="utf-8"></script>
  <script src="/scripts/script.js" type="text/javascript"></script>
</head>
<body>
  <a href="/">New Search</a>
  <h1>USER HISTORY</h1>
  <% for (let i = 0; i < savedFlights.length; i++) { %>
    <div class="historyDisplayContainer">
      <div class="userInfoHistory">
        <p>Origin: <%= savedFlights[i].origin %></p>
        Destination: <%= savedFlights[i].destination %><br>
        Departure: <%= savedFlights[i].departure_date %><br>
        Return: <%= savedFlights[i].return_date %><br>
        Price: $<%= savedFlights[i].price %><br>
        Reminders: <%= savedFlights[i].reminders %><br>
      </div>
      <form class="userHistory" action="/search/history" method="POST">
        <div class="updateBox">
          <label> Edit Comment:
            <input type="text" class="reminderBox" name="reminders">
          </label></p>
          <input type="submit" class="updateButton" value="UPDATE">
        </div>
      </form>
    </div>
  <% } %>
</body>
</html>
